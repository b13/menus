{
  "name": "b13/menus",
  "type": "typo3-cms-extension",
  "license": "GPL-2.0-or-later",
  "description": "Easy and fast menus for TYPO3 Frontends",
  "require": {
    "typo3/cms-core": "^11 || ^12.4 || ^13.1 || ^14",
    "typo3/cms-frontend": "^11 || ^12.4 || ^13.1 || ^14"
  },
  "require-dev": {
    "typo3/cms-fluid-styled-content": "^11 || ^12.4 || ^13.1 || ^14",
    "typo3/cms-install": "^11 || ^12.4 || ^13.1 || ^14",
    "typo3/coding-standards": "^0.5.5",
    "phpstan/phpstan": "^1.10",
    "typo3/tailor": "^1.0",
    "typo3/testing-framework": "^7.0 || ^8.0 || ^9.3",
    "phpunit/phpunit": "9.6 || ^10.5 || ^11.3"
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin",
    "allow-plugins": {
      "typo3/class-alias-loader": true,
      "typo3/cms-composer-installers": true
    },
    "sort-packages": true
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "menus",
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "app-dir": ".Build",
      "web-dir": ".Build/Web"
    }
  },
  "scripts": {
    "prepare-tests": [
       "if [ ! -e .Build/Web/typo3conf/sites -a -e .Build/Web/typo3conf ]; then cd .Build/Web/typo3conf && ln -s ../../../Build/sites && cd -; fi"
    ]
  },
  "autoload": {
    "psr-4": {
      "B13\\Menus\\": "Classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "B13\\Menus\\Tests\\": "Tests/"
    }
  }
}
